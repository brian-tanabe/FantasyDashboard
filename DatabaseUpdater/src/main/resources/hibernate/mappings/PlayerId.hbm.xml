<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.briantanabe.fd.dp.fantasy.player.NflPlayer" table="NflPlayerIds">
        <meta attribute="class-description">
            This class contains player ESPN and NumberFire IDs as well as their name.
        </meta>
        <id name="espnPlayerId" column="espn_id" type="java.lang.Integer">
            <generator class="native" />
        </id>
        <property name="numberFireId" column="number_fire_id" type="java.lang.Integer" />
        <property name="name" column="player_name" type="java.lang.String" />
    </class>
</hibernate-mapping>