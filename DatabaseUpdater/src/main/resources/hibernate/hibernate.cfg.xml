<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Database connection settings -->
        <property name="connection.driver_class">org.h2.Driver</property>
        <property name="connection.url">jdbc:h2:mem:db1;DB_CLOSE_DELAY=-1;MVCC=TRUE</property>
        <property name="connection.username">sa</property>
        <property name="connection.password"/>

        <!-- JDBC connection pool (use the built-in: NOT GOOD) -->
        <property name="connection.pool_size">1</property>

        <!-- SQL dialect -->
        <property name="dialect">org.hibernate.dialect.H2Dialect</property>

        <!-- Disable the second-level cache  -->
        <!-- <property name="cache.provider_class">org.hibernate.cache.internal.NoCacheProvider</property> -->

        <!-- Do not echo all executed SQL to stdout -->
        <property name="show_sql">false</property>

        <!-- Attempting to turn logging down -->
        <property name="generate_statistics">false</property>
        <property name="use_sql_comments">false</property>

        <!-- Drop and re-create the database schema on startup -->
        <property name="hbm2ddl.auto">create</property>

        <!-- Table-class mappings -->
        <mapping resource="./hibernate/mappings/PlayerId.hbm.xml"/>
        <mapping resource="./hibernate/mappings/EspnLeaguePlayerOwnership.hbm.xml" />
        <mapping resource="./hibernate/mappings/NumberFireCurrentWeekProjections.hbm.xml" />
        <mapping resource="./hibernate/mappings/NumberFireRemainingSeasonProjections.hbm.xml" />
    </session-factory>
</hibernate-configuration>