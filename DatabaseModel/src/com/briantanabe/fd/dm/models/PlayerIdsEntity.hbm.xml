<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.briantanabe.fd.dm.models.PlayerIdsEntity" table="PLAYER_IDS" schema="PUBLIC"
           catalog="FANTASYDATABASE">
